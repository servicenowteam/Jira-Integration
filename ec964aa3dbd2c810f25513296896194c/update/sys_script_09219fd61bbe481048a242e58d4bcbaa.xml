        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
  if (current.getValue('sys_updated_by') == 'guest') return;
  gs.include('JiraRequestV2');
  
  var gr = new GlideRecord(current.getValue('name'));
  var sys_id = current.getValue('element_id');
  gr.get(sys_id);
  if (!gr || !gr.isValid()) return;
  if (gr.getValue('active') == false || gs.nil(gr.getValue('external_id')) || gr.getValue('approval') != 'approved') return;
  var request = new JiraRequestV2();

  request.setOptions({
    path: 'issue/' + gr.getValue('external_id') + '/comment',
    method: 'POST',
    body: {
      body: 'h3.' + gs.getUserDisplayName() + ' added a ' + (current.getValue('element') == 'comments' ? 'comment' : 'note') + ' from ServiceNow:\n\n' + current.getValue('value')
    },
    async: true
  });
  request.send();

})(current, previous);]]></script>
